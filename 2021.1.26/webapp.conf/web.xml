<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1">
  <!-- 把我的动态资源类列在文件中，并起一个名字 -->
    <servlet>
      <servlet-name>Hello</servlet-name>
      <!-- 这里的类名称，需要带着 package 一起，也就是写类的完整名称 -->
      <servlet-class>MyFirstDynamicResource</servlet-class>
    </servlet>

    <!-- 把 /s 这个 url 和我们的类关联起来 -->
    <servlet-mapping>
        <servlet-name>Hello</servlet-name>
        <url-pattern>/s</url-pattern>
    </servlet-mapping>
	
	<servlet>
		<servlet-name>aa</servlet-name>
		<servlet-class>HtmlHello</servlet-class>
	</servlet>
  
	<servlet-mapping>
		<servlet-name>aa</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>bb</servlet-name>
		<servlet-class>HtmlBye</servlet-class>
	</servlet>
  
	<servlet-mapping>
		<servlet-name>bb</servlet-name>
		<url-pattern>/bye</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>OnePieceRewardServlet</servlet-name>
		<servlet-class>com.spdz.OnePieceRewardServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>OnePieceRewardServlet</servlet-name>
		<url-pattern>/reward</url-pattern>
	</servlet-mapping>


 </web-app>